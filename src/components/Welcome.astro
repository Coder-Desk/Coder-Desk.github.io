---
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";
import logo from "../assets/logo.svg";
import image from "../assets/banner.jpeg";
import { RxHamburgerMenu } from "react-icons/rx";
import { IconContext } from "react-icons";
---
<script>
    const button=document.getElementById("menu-button")
    const menu=document.getElementById("menu")

    let isOpen=false

    button!.addEventListener("click",()=>{
        if(isOpen){
            console.log("cierra");
            
            menu!.classList.remove("block")
            isOpen=false
            menu!.classList.add("hidden")
        }else{
            console.log("abre")
            menu!.classList.remove("hidden")
            isOpen=true
            menu!.classList.add("block")
        }
    })
</script>

<header class="block top-0 w-full min-h-16 z-50">
    <nav class=" bg-gray-700/60">
        <div class="px-4">
            <div class="relative flex h-16 items-center ">
                <div class="flex flex-1 items-center justify-between">
                    <div class="flex items-center">
                        <img src={astroLogo.src} alt="Astro Logo" class="w-8 h-8" />
                        <span class="text-xl font-bold text-white ml-2">Coder-Desk</span>
                    </div>
                    <div class="items-center space-x-5  hidden md:flex ">
                        <a>Inicio</a>
                        <a>Servicios</a>
                        <a>Miembros</a>
                        <a>Proyectos</a>
                        <a>Contactenos</a>
                    </div>
                </div>
                <RxHamburgerMenu id="menu-button" className="hover:text-white md:hidden flex sm:mr-2" aria-expanded="false"/>
            </div>
        </div>
        <div id="menu" class="hidden">
            <div class="space-y-1 px-2 pt-2 pb-3">
                <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Inicio</a>
                <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Servicios</a>
                <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Miembros</a>
                <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Proyectos</a>
                <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Contactenos</a>
            </div>
        </div>   
    </nav>
</header>
<main class="relative">
    <section id="banner" class="relative">
        <div class="relative isolate overflow-hidden bg-gray-900 py-24 sm:py-32">
            <img src={image.src} alt="Background" class="absolute inset-0 -z-10 size-full object-cover object-right md:object-center" />
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl lg:mx-0">
                  <h2 class="text-5xl font-semibold tracking-tight text-white sm:text-7xl">Work with us</h2>
                  <p class="mt-8 text-lg font-medium text-pretty text-gray-300 sm:text-xl/8">Anim aute id magna aliqua ad ad non deserunt sunt. Qui irure qui lorem cupidatat commodo. Elit sunt amet fugiat veniam occaecat fugiat.</p>
                </div>
                <div class="mx-auto mt-10 max-w-2xl lg:mx-0 lg:max-w-none">
                  <div class="grid grid-cols-1 gap-x-8 gap-y-6 text-base/7 font-semibold text-white sm:grid-cols-2 md:flex lg:gap-x-10">
                    <a href="#">Servicios <span aria-hidden="true">&rarr;</span></a>
                    <a href="#">Miembros <span aria-hidden="true">&rarr;</span></a>
                    <a href="#">Proyectos <span aria-hidden="true">&rarr;</span></a>
                    <a href="#">Contactenos<span aria-hidden="true">&rarr;</span></a>
                  </div>
                  <dl class="mt-16 grid grid-cols-1 gap-8 sm:mt-20 sm:grid-cols-2 lg:grid-cols-4">
                    <div class="flex flex-col-reverse gap-1">
                      <dt class="text-base/7 text-gray-300">Offices worldwide</dt>
                      <dd class="text-4xl font-semibold tracking-tight text-white">12</dd>
                    </div>
                    <div class="flex flex-col-reverse gap-1">
                      <dt class="text-base/7 text-gray-300">Full-time colleagues</dt>
                      <dd class="text-4xl font-semibold tracking-tight text-white">300+</dd>
                    </div>
                    <div class="flex flex-col-reverse gap-1">
                      <dt class="text-base/7 text-gray-300">Hours per week</dt>
                      <dd class="text-4xl font-semibold tracking-tight text-white">40</dd>
                    </div>
                    <div class="flex flex-col-reverse gap-1">
                      <dt class="text-base/7 text-gray-300">Paid time off</dt>
                      <dd class="text-4xl font-semibold tracking-tight text-white">Unlimited</dd>
                    </div>
                  </dl>
                </div>
              </div>
        </div>
    </section>
</main>